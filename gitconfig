    editor = /usr/bin/vim
	  autocrlf = input
    [apply]
    whitespace = fix
    [advice]
    statusHints = false
    [status]
    short = false
    branch = true
    [push]
    default = matching
    [diff]
    tool = vimdiff
    [difftool]
    prompt = false
    [grep]
    lineNumber = true
    extendRegexp = true
    [hub]
    protocol = https
