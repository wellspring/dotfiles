[user]
	name = William Hubault
	email = william.hubault@gmail.com
	#name = wellspring
	#email = wellspring.fr@gmail.com
[core]
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab
[apply]
	whitespace = fix
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	amend = commit --amend
	branches = branch --verbose -a
	remotes = remote --verbose show
    graph = log --graph --pretty=oneline
	rlog = log --pretty=format:'%C(green)%ar%Creset, by %C(red bold)%an %Creset-> %C(cyan)%s'
	slog = log --pretty=format:'%Creset%C(red bold)[%ad] %C(blue bold)%h %Creset%C(magenta bold)%d %Creset%s %C(green bold)(%an)%Creset' --abbrev-commit --date=short
	pull-submodules = submodule foreach git pull origin master
[color]
	ui = auto
[color "status"]
    added = green
    changed = red
    untracked = yellow
[color "diff"]
    meta = cyan
    frag = magenta
    old = red bold
    new = green bold
    whitespace = green reverse
[color "branch"]
    current = bold blue
    local = green
    remote = yellow
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[grep]
    lineNumber = true
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "git://github.com/"
